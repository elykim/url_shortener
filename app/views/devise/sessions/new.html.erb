<section class="bg-gray-100">
  <div class="section-container">
    <div class="max-w-xl mx-auto">
      <h2 class="text-center section-title font-bold">
        Login
      </h2>
      <div class="mt-8 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <%= render 'layouts/shared/notice' %>
        <form class="space-y-6" action="#" method="POST">
          <%= render "devise/shared/error_messages", resource: resource %>
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="rounded-md shadow-sm">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700"> Email address </label>
              <div class="mt-1">
                <input autofocus="autofocus" autocomplete="email" type="email" value="" name="user[email]" id="user_email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              </div>
            </div>
            <div class="space-y-1 mt-3">
              <label for="password" class="block text-sm font-medium text-gray-700"> Password </label>
              <div class="mt-1">
                <input autocomplete="new-password" type="password" name="user[password]" id="user_password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <input id="remember-me" name="user[remember-me]" type="checkbox" class="h-4 w-4 text-light focus:ring-primary border-gray-300 rounded">
                <label for="remember-me" class="ml-2 block text-sm text-gray-900"> Remember me </label>
              </div>
            <% end %>

          </div>
<!--          <div>-->
<!--            <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign in</button>-->
<!--          </div>-->

          <div>
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
              Sign in
            </button>
          </div>

          <div>
            <div class="text-sm flex justify-between">
              <div class="btn-primary">
                <a href="<%= new_password_path(resource_name) %>" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"> Forgot your password? </a>
              </div>
              <div class="btn-primary">
                <a href="<%= new_registration_path(resource_name) %>" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"> Register a new account </a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
